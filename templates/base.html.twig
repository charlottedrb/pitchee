<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
        {% block stylesheets %}
        {% endblock %}

        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
    <div class="background">
        {% if app.user is not null %}
        <ul class="nav">
            <li {% if app.request.get('_route') == 'home' %} class="nav-item active"{% else %} class="nav-item"{% endif %}><a href="{{ path('home') }}"><i class="fas fa-home"></i></a></li>
            <li {% if app.request.get('_route') == 'home' %} class="nav-item active"{% else %} class="nav-item"{% endif %}><a href="{{ path('home') }}"><i class="fas fa-user"></i></a></li>
            <li {% if app.request.get('_route') == 'home' %} class="nav-item active"{% else %} class="nav-item"{% endif %}><a href="{{ path('home') }}"><i class="fas fa-comment"></i></a></li>
            <li {% if app.request.get('_route') == 'home' %} class="nav-item active"{% else %} class="nav-item"{% endif %}><a href="#"><i class="fas fa-sliders-h"></i></a></li>
        </ul>

        <div class="sidebar"></div>
        {% endif %}

        {% block body %}{% endblock %}
    </div>
    </body>
</html>
