<div class="form-container">
    {{ form_start(form, { 'attr': {'class': 'block-form'} }) }}
    <div class="form-row">
        <div class="form-group">
            {{ form_row(form.name, {
                label: 'Titre'
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.parent) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_row(form.description) }}
    </div>

    <button type="submit" class="btn">Envoyer</button>
    {{ form_end(form) }}
</div>

