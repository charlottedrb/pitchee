<div class="form-container">
    {{ form_start(form, { 'attr': {'class': 'block-form'} }) }}
    <div class="form-row">
        <div class="form-group">
            {{ form_row(form.title, {
                label: 'Titre'
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.type) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_row(form.content, {
            label: 'URL de ton contenu'
        }) }}
    </div>

    <div class="form-group">
        {{ form_row(form.answer, {
            label: 'Réponse'
        }) }}
    </div>

    <div class="form-group">
        {{ form_row(form.cardList, {
            label: 'Liste'
        }) }}
    </div>

    <button type="submit" class="btn">Créer la card</button>
    {{ form_end(form) }}
</div>

