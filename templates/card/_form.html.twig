<div class="form-container">
    {{ form_start(form, { 'attr': {'class': 'block-form'} }) }}
    <div class="form-row">
        <div class="form-group">
            {{ form_row(form.title) }}
        </div>
        <div class="form-group">
            {{ form_row(form.type) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_row(form.content) }}
    </div>

    <div class="form-group">
        {{ form_row(form.answer) }}
    </div>

    <div class="form-group">
        {{ form_row(form.cardList) }}
    </div>

    <button type="submit" class="btn">Envoyer</button>
    {{ form_end(form) }}
</div>

