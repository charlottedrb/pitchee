{% extends 'base.html.twig' %}

{% block title %}Card index{% endblock %}

{% block body %}
<div class="container">
    <div class="block-title">
        <h1>Card index</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Answer</th>
                <th>CreatedAt</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for card in cards %}
            <tr>
                <td>{{ card.user }}</td>
                <td>{{ card.id }}</td>
                <td>{{ card.title }}</td>
                <td>{{ card.content }}</td>
                <td>{{ card.answer }}</td>
                <td>{{ card.createdAt ? card.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ card.type }}</td>
                <td>
                    <a href="{{ path('card_show', {'id': card.id}) }}">show</a>
                    <a href="{{ path('card_edit', {'id': card.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('card_new') }}">Create new</a>
</div>
{% endblock %}
